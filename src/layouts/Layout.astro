---
interface Props {
  title?: string;
  description?: string;
  url?: string;
  siteName?: string;
  keywords?: string; 
  canonical?: string; 
}

const {
  title = "Default Title",
  description = "Default Description",
  url = "https://tomso-portfolio.vercel.app/",
  siteName = "Tomso Portfolio",
  keywords = "default, keywords",
  canonical = "https://tomso-portfolio.vercel.app/",
