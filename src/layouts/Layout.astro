---
interface Props {
  title?: string;
  description?: string;
  url?: string;
  siteName?: string;
  keywords?: string;
  canonical?: string;
  type?: string;
  locale?: string;
  publishedTime?: string;
  updatedTime?: string;
  themeColor?: string;
}

const {
  title = "Default Title",
  description = "Default Description",
  url = "https://tomso-portfolio.vercel.app/",
  siteName = "Tomso Portfolio",
  keywords = "default, keywords",
  themeColor = "#000000",
  canonical = "https://tomso-portfolio.vercel.app/",
  type = "website",
  locale = "en_US",
  publishedTime = "2025-01-01T12:00:00Z",
  updatedTime = "2025-01-08T18:00:00Z",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" sizes="48x48" />

    <!-- SEO -->
    <meta name="description" content={description} />
    <meta name="author" content={"BenjamÃ­n Veli"} />
    <meta name="keywords" content={keywords} />
    <link rel="canonical" href={canonical} />

    <!-- OG Metatags -->
    <meta name="og:title" content={title} />
    <meta name="og:description" content={description} />
    <meta name="og:url" content={url} />
    <meta name="og:site_name" content={siteName} />
    <meta name="theme-color" content={themeColor} />

    <meta property="og:type" content={type} />
    <meta property="og:locale" content={locale} />
    <meta property="og:published_time" content={publishedTime} />
    <meta property="og:updated_time" content={updatedTime} />

    <!-- <meta name="og:image" content={} /> -->

    <!-- Required -->
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
